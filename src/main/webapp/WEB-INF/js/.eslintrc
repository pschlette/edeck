{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true,
    }
  },
  "extends": "airbnb",
  "rules": {
    "react/prefer-stateless-function": 0,
    "class-methods-use-this": 0,
    "arrow-body-style": 0
  },
  "settings": {
    "import/resolver": "webpack"
  },
  "env": {
    "browser": true,
    "node": true,
  },
}
